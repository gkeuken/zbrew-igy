#!/bin/sh

out=$(whence zbrewfuncs >/dev/null)
if [ $? -eq 0 ]; then
	. zbrewfuncs
else
	echo "zbrew tools need to be in your PATH"
	exit 4
fi

runivp() {
#set -x
	tempprefix="${ZBREW_HLQ}IGY630T"
	tempds=`mvstmp ${tempprefix}`
	dtouch -tseq $tempds

	jobcard="//IGYWIVP1   JOB ${JOBOPTS},${JOBPARMS}"
	decho "$jobcard" ${tempds}
	decho -a "//*
//PROCLIB JCLLIB ORDER=${ZBREW_HLQ}IGY630.SIGYPROC
//RUNIVP EXEC IGYWCLG,REGION=0M,
//  LNGPRFX=${ZBREW_HLQ}IGY630,
//  LIBPRFX=${CEEHLQ},
//  PARM.LKED='LIST,XREF,LET,MAP',
//  PARM.COBOL='RENT',
//  PARM.GO=''
//COBOL.SYSIN DD DISP=SHR,
//  DSN=${ZBREW_HLQ}IGY630.SIGYSAMP(IGYIVP)
//GO.SYSOUT DD SYSOUT=*
" ${tempds}

	job=`jsub $tempds`
	running=1
	while [ ${running} -gt 0 ]; do
		status=`jls ${job} | awk '{ print $4; }'`
		if [ "${status}" != 'AC' ]; then
			running=0
		else 
			sleep 1
		fi
	done
	rc=`jls ${job} | awk '{ print $5; }'`
	if [ "${rc}" != '0000' ]; then
		echo "IVP failed with RC:${rc}. Temporary JCL is in ${tempds}. Job output is in ${job}"
		exit 16
	fi

	drm $tempds
	exit 0
}

mydir=$(callerdir ${0})
props="${mydir}/../../zbrew/properties/globalprops.json"
zbrewpropse zbrew global "${props}"

props="${mydir}/../../zbrew/properties/zbrewprops.json"
zbrewpropse zbrew config "${props}"

out=`runivp`
rc=$?
if [ $rc -gt 0 ]; then
	echo "IVP failed. Installation aborted"
	echo "$out"
	exit $rc
fi

